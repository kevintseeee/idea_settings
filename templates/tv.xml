    <variable name="content" expression="" defaultValue="" alwaysStopAt="true" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="tvlogw" value="com.ktcp.utils.log.TVCommonLog.w(TAG, &quot;$METHOD_NAME$: $content$&quot;, $exception$);" description="TVCommonLog.w(TAG, String, Exception)" toReformat="true" toShortenFQNames="true">
