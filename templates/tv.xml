    <variable name="exception" expression="" defaultValue="e" alwaysStopAt="false" />
    <context>
      <option name="JAVA_STATEMENT" value="true" />
    </context>
  </template>
  <template name="tvlogi" value="com.ktcp.utils.log.TVCommonLog.i(TAG, &quot;$METHOD_NAME$: $content$&quot;);" description="TVCommonLog.i(TAG, String)" toReformat="true" toShortenFQNames="true">
