<templateSet group="tv">
  <template name="tvlogt" value="private static final String TAG = &quot;$CLASS_NAME$&quot;;&#10;&#10;private final String mTag = com.tencent.qqlivetv.windowplayer.helper.MediaPlayerUtils.getSimpleString(TAG, this);" description="A static logtag with your current classname" toReformat="true" toShortenFQNames="true">
